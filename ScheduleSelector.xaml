&lt;Window x:Class="RevitScheduleEditor.ScheduleSelector"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Schedule to Edit" 
        Height="500" Width="700"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"&gt;
    
    &lt;Grid Margin="10"&gt;
        &lt;Grid.RowDefinitions&gt;
            &lt;RowDefinition Height="Auto"/&gt;
            &lt;RowDefinition Height="Auto"/&gt;
            &lt;RowDefinition Height="*"/&gt;
            &lt;RowDefinition Height="Auto"/&gt;
        &lt;/Grid.RowDefinitions&gt;
        
        &lt;!-- Header --&gt;
        &lt;TextBlock Grid.Row="0" Text="Choose a Schedule to Edit:" 
                   FontSize="14" FontWeight="Bold" 
                   Margin="0,0,0,10"/&gt;
        
        &lt;!-- Search Box --&gt;
        &lt;TextBox Grid.Row="1" Name="SearchBox" 
                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                 Margin="0,0,0,10"&gt;
            &lt;TextBox.Style&gt;
                &lt;Style TargetType="TextBox"&gt;
                    &lt;Setter Property="Foreground" Value="Black"/&gt;
                    &lt;Style.Triggers&gt;
                        &lt;Trigger Property="Text" Value=""&gt;
                            &lt;Setter Property="Background"&gt;
                                &lt;Setter.Value&gt;
                                    &lt;VisualBrush AlignmentX="Left" AlignmentY="Center" Stretch="None"&gt;
                                        &lt;VisualBrush.Visual&gt;
                                            &lt;Label Content="Search schedules..." Foreground="Gray"/&gt;
                                        &lt;/VisualBrush.Visual&gt;
                                    &lt;/VisualBrush&gt;
                                &lt;/Setter.Value&gt;
                            &lt;/Setter&gt;
                        &lt;/Trigger&gt;
                    &lt;/Style.Triggers&gt;
                &lt;/Style&gt;
            &lt;/TextBox.Style&gt;
        &lt;/TextBox&gt;
        
        &lt;!-- Schedule List --&gt;
        &lt;Border Grid.Row="2" BorderBrush="Gray" BorderThickness="1"&gt;
            &lt;ListView Name="ScheduleListView" 
                      ItemsSource="{Binding FilteredSchedules}"
                      SelectedItem="{Binding SelectedSchedule}"
                      ScrollViewer.HorizontalScrollBarVisibility="Auto"
                      ScrollViewer.VerticalScrollBarVisibility="Auto"&gt;
                &lt;ListView.View&gt;
                    &lt;GridView&gt;
                        &lt;GridViewColumn Header="Schedule Name" Width="400"&gt;
                            &lt;GridViewColumn.CellTemplate&gt;
                                &lt;DataTemplate&gt;
                                    &lt;TextBlock Text="{Binding Name}" ToolTip="{Binding Name}"/&gt;
                                &lt;/DataTemplate&gt;
                            &lt;/GridViewColumn.CellTemplate&gt;
                        &lt;/GridViewColumn&gt;
                        &lt;GridViewColumn Header="Type" Width="150"&gt;
                            &lt;GridViewColumn.CellTemplate&gt;
                                &lt;DataTemplate&gt;
                                    &lt;TextBlock Text="{Binding Category}"/&gt;
                                &lt;/DataTemplate&gt;
                            &lt;/GridViewColumn.CellTemplate&gt;
                        &lt;/GridViewColumn&gt;
                        &lt;GridViewColumn Header="ID" Width="100"&gt;
                            &lt;GridViewColumn.CellTemplate&gt;
                                &lt;DataTemplate&gt;
                                    &lt;TextBlock Text="{Binding Id}"/&gt;
                                &lt;/DataTemplate&gt;
                            &lt;/GridViewColumn.CellTemplate&gt;
                        &lt;/GridViewColumn&gt;
                    &lt;/GridView&gt;
                &lt;/ListView.View&gt;
            &lt;/ListView&gt;
        &lt;/Border&gt;
        
        &lt;!-- Status and Buttons --&gt;
        &lt;Grid Grid.Row="3" Margin="0,10,0,0"&gt;
            &lt;Grid.ColumnDefinitions&gt;
                &lt;ColumnDefinition Width="*"/&gt;
                &lt;ColumnDefinition Width="Auto"/&gt;
                &lt;ColumnDefinition Width="Auto"/&gt;
            &lt;/Grid.ColumnDefinitions&gt;
            
            &lt;StackPanel Grid.Column="0" Orientation="Horizontal"&gt;
                &lt;TextBlock Text="{Binding ScheduleCount, StringFormat='Total: {0} schedules'}" 
                           VerticalAlignment="Center" Margin="0,0,10,0"/&gt;
                &lt;TextBlock Text="{Binding FilteredCount, StringFormat='Showing: {0}'}" 
                           VerticalAlignment="Center" Foreground="Blue"/&gt;
            &lt;/StackPanel&gt;
            
            &lt;Button Grid.Column="1" Content="Edit Schedule" 
                    IsDefault="True"
                    IsEnabled="{Binding CanEdit}"
                    Click="EditButton_Click"
                    Padding="20,5" Margin="10,0"/&gt;
            
            &lt;Button Grid.Column="2" Content="Cancel" 
                    IsCancel="True"
                    Click="CancelButton_Click"
                    Padding="20,5"/&gt;
        &lt;/Grid&gt;
    &lt;/Grid&gt;
&lt;/Window&gt;
